      <h2><%= pluralize(book.errors.count, "error") %>errors prohibited this book from being saved:</h2>
      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <label>Title</label><br/>
    <%= f.text_field :title %>
  </div>

  <div>
    <label>Body</label><br/>
    <%= f.text_area :body %>
  </div>

  <% if request.fullpath.include?("edit") %>
    <div>
      <%= f.submit 'Update Book' %>
    </div>
  <% else %>
    <div>
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>

<% end %>

